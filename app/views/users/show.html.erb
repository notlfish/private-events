<h1>Events of <%= @user.name%></h1>

<div>
  <h2>Organized events</h2>
  <ul>
    <% @user.created_events.each do |event| %>
      <li>
        <%= event.name %><br>
        <%= link_to "Delete event",  event, method: :delete, class:"delete-event"%>
      </li>
    <% end %>
  </ul>
</div>

<div>
  <h2>Attended events</h2>
  <h3>Past events</h3>
  <ul>
    <% Event.past_events_of(@user).each do |event| %>
    <li>
      <span><%= event.name %></span>
      <span><%= render_date(event) %></span>
    </li>
    <% end %>
  </ul>
  <h3>Future events</h3>
  <ul>
    <% Event.future_events_of(@user).each do |event| %>
    <li>
      <span><%= event.name %></span>
      <span><%= render_date(event) %></span><br>
      <span>
        <%= link_to "I won't attend",
         destroy_attendance_path(user: @user, event: event),
         method: :delete, class: "not-attend" %>
      </span>
    </li>
    <% end %>
</div>
