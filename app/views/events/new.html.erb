<h2>New Event<h2>
    <%= form_with model: @event do |form|%>
    <%= form.label :name, "Event" %>
    <%= form.text_field :name %>
    <%= form.label :date, "date" %>
    <%= form.datetime_local_field :date %>
    <%= form.label :venue, "venue" %>
    <%= form.text_field :venue %><br>
    <%= form.submit %>
    <%end%>

    <%= render "errors", event: @event %>